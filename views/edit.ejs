<!DOCTYPE html>
<html>
<head>
  <title>Editar Curso</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <script>
    function enviarFormulario() {
      const url = '/api/v1/curso/<%= curso._id %>';
      const data = {
        codigo: document.querySelector('#codigo').value,
        curso: document.querySelector('#curso').value,
        ementa: document.querySelector('#ementa').value
      };
      fetch(url, {
        method: 'PATCH',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      })
      .then(response => response.json())
      .then(data => {
        alert(data.status);
      })
      .catch(error => {
        console.error('Error:', error);
      });
    }
  </script>
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center">Editar Curso</h1>
    <form class="mt-4">
      <div class="form-group">
        <label for="codigo">Código:</label>
        <input type="text" name="codigo" id="codigo" value="<%= curso.codigo %>" class="form-control" required>
      </div>
      <div class="form-group">
        <label for="curso">Curso:</label>
        <input type="text" name="curso" id="curso" value="<%= curso.curso %>" class="form-control" required>
      </div>
      <div class="form-group">
        <label for="ementa">Ementa:</label>
        <textarea name="ementa" id="ementa" class="form-control" required><%= curso.ementa %></textarea>
      </div>
      <button type="submit" onclick="enviarFormulario()" class="btn btn-primary">Salvar Alterações</button>
    </form>
    <a href="/cursos/<%= curso._id %>" class="btn btn-secondary mt-3">Cancelar</a>
  </div>
</body>
</html>