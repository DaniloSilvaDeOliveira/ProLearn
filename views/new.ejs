<!DOCTYPE html>
<html>
<head>
  <title>Adicionar Novo Curso</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <script>
    function adicionarCurso() {
      const url = '/api/v1/curso';
      const data = {
        codigo: document.querySelector('#codigo').value,
        curso: document.querySelector('#curso').value,
        ementa: document.querySelector('#ementa').value
      };
      fetch(url, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      })
      .then(response => response.json())
      .then(data => {
        alert(data.status);
        window.location.href = '/cursos';
      })
      .catch(error => {
        console.error('Error:', error);
      });
    }
  </script>
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center">Adicionar Novo Curso</h1>
    <div class="mt-4">
      <div class="form-group">
        <label for="codigo">CÃ³digo:</label>
        <input type="text" name="codigo" id="codigo" class="form-control" required>
      </div>
      <div class="form-group">
        <label for="curso">Curso:</label>
        <input type="text" name="curso" id="curso" class="form-control" required>
      </div>
      <div class="form-group">
        <label for="ementa">Ementa:</label>
        <textarea name="ementa" id="ementa" class="form-control" required></textarea>
      </div>
      <button onclick="adicionarCurso()" class="btn btn-primary">Adicionar Curso</button>
    </div>
    <a href="/cursos" class="btn btn-secondary mt-3">Voltar</a>
  </div>
</body>
</html>